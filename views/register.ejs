



<%- include("partials/start.ejs") -%>
<link rel="stylesheet" href="/stylesheets/login_register_style.css" class="css">
</head>
<body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<%- include("partials/header.ejs") -%>

<div id="main_page">
  <div id="main_header">
    <div id="image_container">
        <img src="/images/official-background.jpg" alt="">
    </div>
    <div id="company_info">
        <a>TechTeach</a>
    </div>
  </div>
  <div id="main_form">
    <div class="video-background">
      <video autoplay loop muted>
          <source src="/images/tech-background.mp4" type="video/mp4">
      </video>
    </div>
    <div class="background-tint"></div>
    <form method="POST" name="register">
      <div class="form_unit title_unit"><h1>Register</h1></div>
      <div class="form_unit">
        <p>Email</p>
        <input type="email" name="email" placeholder="email">
      </div>
      <div class="form_unit password_unit">
        <div class="form_unit">
          <p>Nombre de usuario</p>
          <input type="text" name="username" placeholder="username">
        </div>
        <div class="form_unit">
          <p>Número de teléfono</p>
          <input type="text" name="phone" placeholder="phone">
        </div>
      </div>
      <div class="form_unit password_unit">
        <div class="form_unit">
          <p>Contraseña</p>
          <input type="password" name="password" placeholder="password">
        </div>
        <div class="form_unit">
          <p>Repetir contraseña</p>
          <input type="password" name="repeat_password" placeholder="Repeat password">
        </div>
        
      </div>
      <div class="form_unit">
        <p style="text-align: center">¿Ya tienes una cuenta? Accede <a href="/login">aquí</a></p>
        <p style="color: red;text-align: center"><%= message %></p>
      </div>
      <div class="form_unit">
        <button type="submit" class="border_yellow_button">Registrarse</button>
      </div>

    </form>
  </div>
</div>
